<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, url: registration_path(@user), html: {method: :put}, wrapper: :vertical_form) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :avatar, as: :file %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :current_password %>
  <%= f.button :submit, 'Update account' %>
<% end %>

<br>
<h3>Delete my account</h3>
<p><%= button_to "Close account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

<h2>Sign up</h2>

<%= simple_form_for(resource, url: registration_path(@user), wrapper: :vertical_form) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, 'Create account' %>
<% end %>

<br>
<%= render "devise/shared/links" %>

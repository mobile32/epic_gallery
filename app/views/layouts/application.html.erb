<!DOCTYPE html>
<html>
<head>
  <title>EpicGallery</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload', media: 'all' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Epic Gallery</a>

  <button class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">

      <% if user_signed_in? %>
        <li class="navbar-text logged-options">
          Hello <%= full_name(current_user) %>!
        </li>
        <li class="nav-item logged-options menu--log-out">
          <a class="nav-link" href="#"> | Log out</a>
        </li>
      <% else %>
        <li class="nav-item guest-options menu--log-in">
          <a class="nav-link" href="#">Log in</a>
        </li>
        <li class="nav-item guest-options menu--sign-in">
          <a class="nav-link" href="#">Sign in</a>
        </li>
      <% end %>

    </ul>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

  <%= yield %>
</div>

<div class="alert alert-info">
  <%= debug(params) if Rails.env.development? %>
</div>

</body>
</html>
